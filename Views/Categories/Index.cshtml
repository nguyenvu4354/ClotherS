@model IEnumerable<ClotherS.Models.Category>

@{
    ViewData["Title"] = "Manage Categories";
}

<link rel="stylesheet" href="~/css/product-styles.css" asp-append-version="true">

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white text-center">
            <h1 class="title text-center">Manage Categories</h1>
        </div>

        <div class="card-body">
            <div class="text-end btn-create">
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus-circle"></i> Create New
                </a>
            </div>
            <table class="table table-hover table-bordered text-center align-middle">
                <thead class="table-orange">
                    <tr>
                        <th>Category Name</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>
                                <span class="badge @(item.Disable ? "bg-danger" : "bg-success")">
                                    @(item.Disable ? "Disabled" : "Active")
                                </span>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Import FontAwesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

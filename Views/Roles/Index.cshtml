@model IEnumerable<ClotherS.Models.Role>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.RoleName)</th>
            <th>Disabled</th> <!-- Cột mới -->
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.RoleName)</td>
                <td>@(item.Disable ? "Yes" : "No")</td> <!-- Hiển thị trạng thái -->
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RoleId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.RoleId">Details</a> |
                    @if (!item.Disable)
                    {
                        <!-- Chỉ hiển thị nút xóa nếu chưa bị disable -->
                        <a asp-action="Delete" asp-route-id="@item.RoleId">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

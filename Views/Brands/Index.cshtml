@model IEnumerable<ClotherS.Models.Brand>

@{
    ViewData["Title"] = "Manage Brands";
}

<link rel="stylesheet" href="~/css/management-styles.css" asp-append-version="true">

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-warning text-white text-center">
            <h1 class="title text-center">Manage Brands</h1>
        </div>

        <div class="card-body">
            <div class="text-end btn-create">
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus-circle"></i> Create New
                </a>
            </div>

            <table class="table table-hover table-bordered text-center align-middle">
                <thead class="table-orange">
                    <tr>
                        <th>Brand Name</th>
                        <th>Description</th>
                        <th>Actions</th >
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.BrandName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>
                                <form asp-action="UpdateStatus" asp-route-id="@item.BrandId" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-sm @(item.Disable ? "btn-success" : "btn-danger")">
                                        <i class="fas @(item.Disable ? "fa-check-circle" : "fa-ban")"></i>
                                        @(item.Disable ? "Enable" : "Disable")
                                    </button>
                                </form>
                                <a asp-action="Edit" asp-route-id="@item.BrandId" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Import FontAwesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

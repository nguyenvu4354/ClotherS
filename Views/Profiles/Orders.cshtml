@model List<ClotherS.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<h2>My Orders</h2>

@if (!Model.Any())
{
    <p>You have not placed any orders yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>Receive Date</th>
                <th>Status</th>
                <th>Total Price</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OId</td>
                    <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                    <td>@(order.ReceiveDate?.ToString("yyyy-MM-dd") ?? "Not received")</td>
                    <td>@order.Status</td>
                    <td>$@(order.OrderDetails.Sum(d => d.Price * d.Quantity * (1 - d.Discount / 100.0)))</td>
                    <td>
                        <a asp-action="OrderDetails" asp-route-id="@order.OId" class="btn btn-info">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

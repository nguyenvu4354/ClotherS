@{
    ViewData["Title"] = "Forgot Password";
}

<div class="auth-wrapper">
    <div class="">
        <div class="card p-4 shadow">
            <h1 class="title text-center">Forgot Password</h1>
            <p class="text-muted text-center">Enter your registered email address, and we will send you a link to reset your password.</p>
            <hr />

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info">@ViewBag.Message</div>
            }

            <form method="post" asp-action="ForgotPassword">
                <div class="form-group">
                    <label>Email Address</label>
                    <input type="email" name="email" class="form-control" required placeholder="Enter your email" />
                    <small class="form-text text-muted">Make sure to enter the email associated with your account.</small>
                </div>
                <button type="submit" class="btn btn-warning w-100">Send Reset Link</button>
            </form>

            <p class="text-center mt-3">
                <a asp-action="Login">Back to Login</a>
            </p>

            <p class="text-center text-muted mt-2">
                If you don’t receive an email, please check your spam folder or try again.
            </p>
        </div>
    </div>
</div>
<link rel="stylesheet" href="~/css/auth-styles.css" asp-append-version="true">

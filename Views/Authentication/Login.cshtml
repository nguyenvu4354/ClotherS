@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow p-4" style="width: 350px;">
        <h2 class="text-center">Login</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label class="fw-bold">Email</label>
                <input type="email" name="email" class="form-control" required />
            </div>
            <div class="form-group mb-3">
                <label class="fw-bold">Password</label>
                <input type="password" name="password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Register" class="btn btn-link">Don't have an account? Register here</a>
        </div>
        <div class="text-center mt-2">
            <a asp-action="ForgotPassword" class="btn btn-warning">Forgot Password?</a>
        </div>
    </div>
</div>

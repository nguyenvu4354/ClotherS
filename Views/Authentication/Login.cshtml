@{
    ViewData["Title"] = "Login";
}

<div class="auth-wrapper">
    <div class="auth-container">
        <div class="card p-4 shadow">
            <h1 class="title text-center">Login</h1>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form method="post" asp-action="Login">
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" name="email" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="password" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary w-100 mt-3">Login</button>
            </form>

            <p class="text-center mt-3"><a asp-action="ForgotPassword">Forgot your password?</a></p>
            <p class="text-center">Don't have an account? <a asp-action="Register">Sign up</a></p>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/auth-styles.css" asp-append-version="true">


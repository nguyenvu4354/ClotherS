@{
    ViewData["Title"] = "Reset Password";
}

<div class="auth-wrapper    ">
    <div class="auth-container">
        <div class="card p-4 shadow">
            <h1 class="title text-center">Reset Password</h1>
            <p class="text-muted text-center">Enter your new password below. Make sure it's strong and easy to remember.</p>
            <hr />

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form asp-action="ResetPassword" method="post">
                <input type="hidden" name="token" value="@ViewBag.Token" />
                <input type="hidden" name="email" value="@ViewBag.Email" />

                <div class="form-group">
                    <label>New Password</label>
                    <input type="password" name="newPassword" class="form-control" required placeholder="Enter a strong password" />
                    <small class="form-text text-muted">Use at least 8 characters, including uppercase, lowercase, numbers, and symbols.</small>
                </div>

                <div class="form-group">
                    <label>Confirm Password</label>
                    <input type="password" name="confirmPassword" class="form-control" required placeholder="Re-enter your new password" />
                    <small class="form-text text-muted">Make sure both passwords match.</small>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-success w-100">Reset Password</button>
                </div>
            </form>

            <p class="text-center mt-3">
                <a asp-action="Login">Back to Login</a>
            </p>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/auth-styles.css" asp-append-version="true">

                        
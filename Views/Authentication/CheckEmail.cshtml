@{
    ViewData["Title"] = "Check Your Email";
}

<div class="container text-center mt-5">
    <h1 class="title text-center">Check Your Email</h1>
    <p>We have sent a confirmation email to <strong>@ViewBag.Email</strong>. Please check your inbox and click the confirmation link to activate your account.</p>
    <p>If you don’t see the email, check your spam folder or <a asp-action="ResendConfirmationEmail" asp-route-email="@ViewBag.Email">click here</a> to resend it.</p>

    <a asp-action="Login" class="btn btn-primary mt-3">Go to Login</a>
</div>

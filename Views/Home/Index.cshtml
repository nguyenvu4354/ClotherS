<!--/slider-->
@Html.Partial("_BannerSlider", ViewData["Banners"] as List<ClotherS.Models.Banner>)

@{
    var currentSort = ViewData["CurrentSort"]?.ToString();
}

<div class="container">
    <div class="row">
        <div class="col-sm-9">
            <div class="features_items">
                <h2 class="title text-center">Features Items</h2>
                @foreach (var item in Model)
                {
                    <div class="col-sm-4">
                        <div class="product-image-wrapper">
                            <div class="single-products">
                                <a asp-action="Details" asp-controller="Home" asp-route-id="@item.ProductId">
                                    <div class="productinfo text-center">
                                        <img src="~/images/@item.Image" alt="@item.ProductName" />
                                        <h2>$@item.Price</h2>
                                        <p>@item.ProductName</p>
                                    </div>
                                </a>
                                <a asp-action="Details" asp-controller="Home" asp-route-id="@item.ProductId">
                                    <div class="product-overlay">
                                        <div class="overlay-content">
                                            <h2>Sale: @item.Discount%</h2>
                                            <h2>REMAINING PRODUCTS: @item.Quantity</h2>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="choose">
                                <ul class="nav nav-pills nav-justified">
                                    <li><a href="#"><i class="fa fa-plus-square"></i>Add to Cart</a></li>
                                    <li><a href="#"><i class="fa fa-plus-square"></i>Add to compare</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-sm-3">
            @Html.Partial("_SidebarPartial")
        </div>
    </div>
</div>
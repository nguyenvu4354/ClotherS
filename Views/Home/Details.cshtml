@model ClotherS.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>Product Details</h2>

<div class="card">
    <div class="card-body">
        <h3 class="card-title text-center">@Model.ProductName</h3>

        <div class="row d-flex align-items-center">
            <div class="col-md-5 text-center">
                <img src="~/images/@Model.Image" alt="@Model.ProductName" class="img-fluid rounded shadow"
                     style="max-width: 100%; height: 350px; object-fit: cover;">
            </div>
            <div class="col-md-7">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>Category</th>
                            <td>@ViewBag.CategoryName</td>
                        </tr>
                        <tr>
                            <th>Brand</th>
                            <td>@ViewBag.BrandName</td>
                        </tr>
                        <tr>
                            <th>Price</th>
                            <td class="text-danger font-weight-bold">@Model.Price.ToString("C")</td>
                        </tr>
                        <tr>
                            <th>Quantity</th>
                            <td>@Model.Quantity</td>
                        </tr>
                        <tr>
                            <th>Size</th>
                            <td>@Model.Size</td>
                        </tr>
                        <tr>
                            <th>Material</th>
                            <td>@Model.Material</td>
                        </tr>
                        <tr>
                            <th>Discount</th>
                            <td>@(Model.Discount.HasValue ? Model.Discount + "%" : "No Discount")</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>@Model.Status</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>@Model.Description</td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between mt-3">
                    <a href="javascript:history.back()" class="btn btn-outline-primary">Back to List</a>
                    <form method="post" action="@Url.Action("AddToCart", "ShoppingCart")">
                        <input type="hidden" name="productId" value="@Model.ProductId" />
                        <input type="hidden" name="quantity" value="1" />
                        <button type="submit" class="btn btn-success">Add to Cart</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

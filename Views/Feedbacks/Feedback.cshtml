@model ClotherS.Models.Feedback

@{
    ViewData["Title"] = "View Feedback";
}

<h2 class ="title text-center">View Feedback</h2>

@if (Model != null)
{
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sản phẩm: @Model.Product.ProductName</h4>
            <p class="card-text"><strong>Nội dung:</strong> @Model.Content</p>
            <p>
                <strong>Số sao:</strong>
                @for (int i = 0; i < Model.Rating; i++)
                {
                    <i class="fa fa-star text-warning"></i>
                }
                @for (int i = Model.Rating; i < 5; i++)
                {
                    <i class="fa fa-star text-secondary"></i>
                }
            </p>
            <p><strong>Ngày đánh giá:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</p>
        </div>
    </div>
}
else
{
    <p class="text-muted">Không có đánh giá nào.</p>
}

<a href="@Url.Action("OrderDetails", "Profiles", new { id = ViewData["OrderId"] })" class="btn btn-secondary">Quay lại</a>

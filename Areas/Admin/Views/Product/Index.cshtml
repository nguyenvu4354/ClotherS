@model IEnumerable<ClotherS.Models.Product>

<body>
    <div class="container mt-4">
        <h2 class="text-center">Product List</h2>
        <a asp-action="Create" class="btn btn-primary mb-3">Create New</a>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Brand</th>
                    <th>Category</th>
                    <th>Material</th>
                    <th>Size</th>
                    <th>Discount</th>
                    <th>Status</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ProductId</td>
                        <td>@product.ProductName</td>
                        <td>@product.Quantity</td>
                        <td>@product.Price</td>
                        <td>@(product.Brand?.BrandName ?? "N/A")</td>
                        <td>@(product.Category?.CategoryName ?? "N/A")</td>
                        <td>@product.Material</td>
                        <td>@product.Size</td>
                        <td>@(product.Discount ?? 0)%</td>
                        <td>
                            <span class="badge @(product.Status == "Available" ? "bg-success" : "bg-danger")">
                                @product.Status
                            </span>
                        </td>
                        <td>
                            <img src="~/images/@product.Image" alt="Product Image" width="50" height="50" class="rounded">
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
  
</body>
</html>

@model ClotherS.Models.Account

@{
    ViewData["Title"] = "Account Details";
}

<h1 class="text-center">Account Details</h1>
<hr />

<div class="card mx-auto" style="max-width: 800px;">
    <div class="card-body">
        <div class="row">
            <!-- Phần hình ảnh bên trái -->
            <div class="col-md-4 text-center">
                @if (!string.IsNullOrEmpty(Model.AccountImage))
                {
                    <img src="@Url.Content("~/images/" + Model.AccountImage)" class="rounded-circle img-fluid" style="width: 150px; height: 150px;" alt="User Avatar">
                }
                else
                {
                    <img src="https://via.placeholder.com/150" class="rounded-circle img-fluid" alt="Default Avatar">
                }
            </div>

            <!-- Phần thông tin bên phải -->
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">Full Name</dt>
                    <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

                    <dt class="col-sm-4">Username</dt>
                    <dd class="col-sm-8">@Model.UserName</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Email) ? "N/A" : Model.Email)</dd>

                    <dt class="col-sm-4">Phone Number</dt>
                    <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.PhoneNumber) ? "N/A" : Model.PhoneNumber)</dd>

                    <dt class="col-sm-4">Address</dt>
                    <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Address) ? "N/A" : Model.Address)</dd>

                    <dt class="col-sm-4">Gender</dt>
                    <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Gender) ? "N/A" : Model.Gender)</dd>

                    <dt class="col-sm-4">Date of Birth</dt>
                    <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.DateOfBirth) ? "N/A" : Model.DateOfBirth)</dd>

                    <dt class="col-sm-4">Account Created</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.Active.HasValue && Model.Active.Value)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <div class="text-center mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
}

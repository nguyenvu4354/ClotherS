@{
    Layout = "_Layout";
    ViewData["Title"] = "Dashboard";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<style>
    body {
        background-color: #f4f4f4;
    }

    .card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s;
        background: linear-gradient(135deg, #FE980F, #ff7300);
        border-radius: 15px;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
        }

    .table tbody tr:hover {
        background-color: #ffe5b4;
        transition: 0.3s;
    }

    .dashboard-icon {
        font-size: 2.5rem;
        margin-right: 15px;
    }

    h2 {
        color: #FE980F;
        font-weight: bold;
    }

    .table-dark {
        background-color: #FE980F !important;
        color: white;
    }
</style>

<div class="container mt-4">
    <h1 class="title text-center">Admin Dashboard</h1>
    <div class="row text-center">
        <div class="col-md-3">
            <div class="card text-white p-4">
                <div class="card-body d-flex align-items-center">
                    <i class="fas fa-dollar-sign dashboard-icon"></i>
                    <div>
                        <h5>Revenue</h5>
                        <h3>$@ViewBag.TotalRevenue</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white p-4" onclick="window.location.href='/Admin/Orders'">
                <div class="card-body d-flex align-items-center">
                    <i class="fas fa-shopping-cart dashboard-icon"></i>
                    <div>
                        <h5>Total Orders</h5>
                        <h3>@ViewBag.TotalOrders</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white p-4" onclick="window.location.href='/Admin/Products'">
                <div class="card-body d-flex align-items-center">
                    <i class="fas fa-box dashboard-icon"></i>
                    <div>
                        <h5>Products</h5>
                        <h3>@ViewBag.TotalProducts</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white p-4" onclick="window.location.href='/Admin/Accounts'">
                <div class="card-body d-flex align-items-center">
                    <i class="fas fa-users dashboard-icon"></i>
                    <div>
                        <h5>Customers</h5>
                        <h3>@ViewBag.TotalCustomers</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h2 class="title text-center">Revenue Chart</h2>
    <canvas id="revenueChart" height="100"></canvas>

    <h2 class="title text-center">Latest Orders</h2>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Order ID</th>
                <th>Customer</th>
                <th>Order Date</th>
                <th>Shipping Address</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in ViewBag.LatestOrders) 
            {
                <tr>
                    <td>@order.OId</td>
                    <td>@order.Account.UserName</td>
                    <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                    <td>@order.ShippingAddress</td>
                    <td>
                        @(order.IsCart ? "Pending" : "Completed")
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h2 class="title text-center">Best Selling Products</h2>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Product Name</th>
                <th>Units Sold</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in ViewBag.BestSellingProducts)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.TotalSold</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var revenueData = @Html.Raw(ViewBag.RevenueData);

        var labels = revenueData.map(d => "Month " + d.Month);
        var data = revenueData.map(d => d.Revenue);

        var ctx = document.getElementById('revenueChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Revenue ($)',
                    data: data,
                    backgroundColor: 'rgba(254, 152, 15, 0.8)',
                    borderColor: 'rgba(254, 152, 15, 1)',
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });
    });
</script>
